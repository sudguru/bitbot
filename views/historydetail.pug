extends layout

block content
	h3 History Detail
	.container
		.row
			.col-12.col-md-9
				.card.text-white.bg-info.mb-3
					.card-header Batch : #{batch.batch_name}
					.card-body
						p.card-text.mt-3
							.row
								.col-12.col-md-6
									span.caption-text Bitshare Account: &nbsp;&nbsp;&nbsp;
									span.data-text paydporn1 (1.2.87470) 
								.col-12.col-md-6
									span.caption-text BTS Balance: &nbsp;&nbsp;&nbsp;
									span.data-text.balance #{batch.balance}
							.row
								.col-12.col-md-6
									span.caption-text Asset ID: &nbsp;&nbsp;&nbsp;
									span.data-text PORND 1.3.3030 
								.col-12.col-md-6
									span.caption-text Holders: &nbsp;&nbsp;&nbsp;
									span.data-text.holders_count #{batch.holders_count}				
							hr
							.row
								.col-12.col-md-6
									span.caption-text investor1234: &nbsp;&nbsp;&nbsp;
									span.data-text 5% 
								.col-12.col-md-6
									span.data-text.five #{batch.for_investor1234_amount}	BTS
							.row
								.col-12.col-md-6
									span.caption-text alice123: &nbsp;&nbsp;&nbsp;
									span.data-text 5% 
								.col-12.col-md-6
									span.data-text.five #{batch.for_alice123_amount}	BTS
							.row
								.col-12.col-md-6
									span.caption-text For Fees: &nbsp;&nbsp;&nbsp;
									span.data-text 3% 
								.col-12.col-md-6
									span.data-text.fees #{batch.for_fees_amount}	BTS
							hr
							.row
								.col-12.col-md-6
									span.caption-text Total Distribution Amount: 
								.col-12.col-md-6
									span.data-text.distribution_amount #{batch.distribution_amount}	BTS
				h5 Payment Distribution
				table.table
					thead
						tr
							th(scope='col') SN
							th(scope='col') Acc#
							th(scope='col') Name
							th.text-right(scope='col') Amount
							th.text-right(scope='col') Percent
							th.text-right(scope='col') Payment
					tbody
						each payment, i in payments
							tr
								th(scope='row') #{i+1}
								td= payment.account_id
								td= payment.name
								td.text-right= payment.amount
								td.text-right= payment.percent
								td.text-right= payment.payment
			.col-12.col-md-3
				

