extends layout

block content
	h3 History Detail
	.container
		.row
			.col-12.col-md-12
				.card.text-white.bg-info.mb-3
					.card-header Batch : #{batch.batch_name}
					.card-body
					p.card-text.mt-3
						.row
							.col-12.col-md-6
								span.caption-text Bitshare Account: &nbsp;&nbsp;&nbsp;
								span.data-text dpornclassic2018 (1.2.892978) 
							.col-12.col-md-6
								span.caption-text BTS Balance: &nbsp;&nbsp;&nbsp;
								span.data-text.balance #{balance}
						.row
							.col-12.col-md-6
								span.caption-text Asset ID: &nbsp;&nbsp;&nbsp;
								span.data-text PORNDCLASSIC 1.3.3859 
							.col-12.col-md-6
								span.caption-text Holders: &nbsp;&nbsp;&nbsp;
								span.data-text.holders_count #{holders_count}				
						hr
						.row
							.col-12.col-md-6
								span.caption-text investor1234: &nbsp;&nbsp;&nbsp;
								span.data-text 10% 
							.col-12.col-md-6
								span.data-text.five #{for_investor1234_amount}	BTS
						.row
							.col-12.col-md-6
								span.caption-text For Fees: &nbsp;&nbsp;&nbsp;
								span.data-text 3% 
							.col-12.col-md-6
								span.data-text.fees #{for_fees_amount}	BTS
						hr
						.row
							.col-12.col-md-6
								span.caption-text Total Distribution Amount: 
							.col-12.col-md-6
								span.data-text.distribution_amount #{distribution_amount}	BTS
				h5 Payment Distribution
				table.table
					thead
						tr
							th(scope='col') SN
							th(scope='col') Acc#
							th(scope='col') Name
							th.text-right(scope='col') Amount
							th.text-right(scope='col') Percent
							th.text-right(scope='col') Payment
					tbody
						each payment, i in payments
							tr
								th(scope='row') #{i+1}
								td= payment.account_id
								td= payment.name
								td.text-right= payment.amount
								td.text-right= payment.percent
								td.text-right= payment.payment
								td.text-right
									if payment.done
										| Paid
									else 
										a.btn.btn-warning.pay(href='javascript:void(0)' data-id=`${payment._id}`) Pay

				

